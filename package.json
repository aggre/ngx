{
  "name": "ngx",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "test:ci": "ng test -sr --progress false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "ci:test": "run-s lint build:libs test:ci",
    "format": "prettier --write \"{apps,libs}/**/*.ts\"",
    "build:libs:store": "ng-packagr -p libs/store/package.json",
    "build:libs:ngx-store": "ng-packagr -p libs/ngx-store/package.json",
    "build:libs:ngx-grid-layout": "ng-packagr -p libs/ngx-grid-layout/package.json",
    "build:libs": "run-s build:libs:store build:libs:ngx-store build:libs:ngx-grid-layout",
    "publish:libs:store": "yarn publish --cwd dist/@lacolaco/store --access public",
    "publish:libs:ngx-store": "yarn publish --cwd dist/@lacolaco/ngx-store --access public",
    "publish:libs:ngx-grid-layout": "yarn publish --cwd dist/@lacolaco/ngx-grid-layout --access public",
    "publish:libs": "run-s publish:libs:*",
    "link:store": "cd dist/@lacolaco/store && yarn link && cd ../../../ && yarn link @lacolaco/store",
    "postinstall": "run-s build:libs:store link:store",
    "changelog:libs:store": "standard-changelog -i libs/store/CHANGELOG.md -k libs/store/package.json -o libs/store/CHANGELOG.md --commit-path libs/store",
    "changelog:libs:ngx-store": "standard-changelog -i libs/ngx-store/CHANGELOG.md -k libs/ngx-store/package.json -o libs/ngx-store/CHANGELOG.md --commit-path libs/ngx-store",
    "changelog:libs:ngx-grid-layout": "standard-changelog -i libs/ngx-grid-layout/CHANGELOG.md -k libs/ngx-grid-layout/package.json -o libs/ngx-grid-layout/CHANGELOG.md --commit-path libs/ngx-grid-layout",
    "changelog:libs": "run-p changelog:libs:*"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.1.0",
    "@angular/common": "5.1.0",
    "@angular/compiler": "5.1.0",
    "@angular/core": "5.1.0",
    "@angular/forms": "5.1.0",
    "@angular/platform-browser": "5.1.0",
    "@angular/platform-browser-dynamic": "5.1.0",
    "@angular/router": "5.1.0",
    "@ngrx/effects": "4.1.1",
    "@ngrx/router-store": "4.1.1",
    "@ngrx/store": "4.1.1",
    "@ngrx/store-devtools": "4.0.0",
    "@nrwl/nx": "0.6.7",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "~1.6.0",
    "@angular/compiler-cli": "5.1.0",
    "@angular/language-service": "5.1.0",
    "@nrwl/schematics": "0.6.7",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.0.0-rc.9",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.9.0",
    "protractor": "~5.1.2",
    "standard-changelog": "^1.0.8",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "typescript": "2.5.3"
  }
}
